<Alloy>
	<Tab title="Principal" windowSoftInputMode="Ti.UI.Android.SOFT_INPUT_ADJUST_PAN">
		<Window	id="win" >
			<TextField id="fecha" editable="false" onClick="mostrarCalendario" hintText="Fecha"></TextField>
			<Button id="calendarIcon" onClick="mostrarCalendario"></Button>
			
			<TextField id="hora" editable="false" onClick="mostrarReloj" onFocus="mostrarReloj" hintText="Hora"></TextField>
			<Button id="clockIcon" onClick="mostrarReloj" onFocus="mostrarReloj"></Button>			
			
			<TextField id="mensaje" editable="false" onClick="selectMensaje" onFocus="selectMensaje" hintText="Mensaje"></TextField>
			<Button id="mensajeIcon" onClick="selectMensaje"></Button>
			
			<TextField id="destino" editable="false" onClick="selectLista" onFocus="selectLista" hintText="Contactos"></TextField>
			<Button id="destinoIcon" onClick="selectLista"></Button>
			
			<TextField id="lugar" onClick="dialogoLugar" editable="false" onFocus="dialogoLugar" hintText="Ubicacion"></TextField>
			<Button id="lugarIcon" onClick="dialogoLugar"></Button>
			
			<Button id="enviar">Enviar</Button>
		</Window>
	</Tab>
</Alloy>