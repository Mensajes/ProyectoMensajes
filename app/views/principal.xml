<Alloy>
	<Tab title="Principal" windowSoftInputMode="Ti.UI.Android.SOFT_INPUT_ADJUST_PAN">
		<Window	id="win" >
			<TextField id="fecha" editable="false" onClick="mostrarCalendario"></TextField>
			<Button id="calendarIcon" onClick="mostrarCalendario"></Button>
			
			<TextField id="hora" editable="false" onClick="mostrarReloj" onFocus="mostrarReloj"></TextField>
			<Button id="clockIcon" onClick="mostrarReloj" onFocus="mostrarReloj"></Button>			
			
			
			<Picker id="mensaje" type="Titanium.UI.PICKER_TYPE_PLAIN">
				<PickerRow title="Mensaje Uno"></PickerRow>
				<PickerRow title="Mensaje Dos"></PickerRow>
				<PickerRow title="Mensaje Tres"></PickerRow>
			</Picker>
			<Button id="mensajeIcon"></Button>
			
			<Picker id="destino" type="Titanium.UI.PICKER_TYPE_PLAIN">
				<PickerRow title="Lista Uno"></PickerRow>
				<PickerRow title="Lista Dos"></PickerRow>
				<PickerRow title="Lista Tres"></PickerRow>
			</Picker>
			<Button id="destinoIcon"></Button>
			
			<TextField id="lugar" onClick="dialogoLugar" editable="false" onFocus="dialogoLugar"></TextField>
			<Button id="lugarIcon"></Button>
			
			<Button id="enviar">Enviar</Button>
		</Window>
	</Tab>
</Alloy>